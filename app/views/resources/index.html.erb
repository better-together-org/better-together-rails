<%# app/views/resources/index.html.erb %>

<% content_for :page_title do %>
  <%= resource_class.model_name.human.pluralize %>
<% end %>

<div class="container my-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= t('.title') %></h1>
    <% if policy(resource_class).create? %>
      <%= link_to new_resource_path, class: 'btn btn-primary', 'aria-label' => t('.new_resource') do %>
        <i class="fas fa-plus"></i> <%= t('.new_resource') %>
      <% end %>
    <% end %>
  </div>

  <div id="resources">
    <% if @resources.any? %>
      <% @resources.each do |resource| %>
        <%= render 'resource', resource: resource %>
      <% end %>
    <% else %>
      <p><%= t('.no_resources_message') %></p>
    <% end %>
  </div>

</div>
