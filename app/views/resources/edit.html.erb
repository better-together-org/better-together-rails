
<% content_for :page_title do %>
  <%= @resource.name %> | <%= resource_class.model_name.human.pluralize %>
<% end %>

<div class="container my-3">
  <h1><%= t('.title') %></h1>

  <%= render "form", resource: @resource %>

  <div class="mt-3">
    <% if policy(@resource).show? %>
      <%= link_to t('.show_resource'), resource_path(@resource), class: "btn btn-info me-2" %>
    <% end %>
    <% if policy(Resource).index? %>
      <%= link_to t('.back_to_resources'), resources_path, class: "btn btn-info" %>
    <% end %>
  </div>

</div>