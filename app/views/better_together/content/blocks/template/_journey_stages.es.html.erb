  <h2 class="fw-light text-center mb-4">En cualquier etapa de tu viaje, podemos guiarte</h2>
  <div class="row row-cols-1 row-cols-md-3">
    <!-- Feature 1 -->
    <div class="col mb-3">
      <a href="<%= render_page_path('pre-arrival') %>" class="card journey-stage pre-arrival hover-effect shadow-sm h-100 text-center">
        <div class="card-body">
          <h4 class="card-title">Pre-Arribo</h4>
          <%= image_tag 'journey_stages/pre-arrival.svg', class: 'card-img-top mb-3', alt: 'Imagen de Pre-Arribo' %>
          <div class="btn btn-info">Prep√°rate para venir a NL</div>
        </div>
      </a>
    </div>
    <!-- Feature 2 -->
    <div class="col mb-3">
      <a href="<%= render_page_path('arrival') %>" class="card journey-stage arrival hover-effect shadow-sm h-100 text-center">
        <div class="card-body">
          <h4 class="card-title">Arribo</h4>
          <%= image_tag 'journey_stages/arrival.svg', class: 'card-img-top mb-3', alt: 'Imagen de Arribo' %>
          <button class="btn btn-info">Tus primeros pasos en NL</button>
        </div>
      </a>
    </div>
    <!-- Feature 3 -->
    <div class="col mb-3">
      <a href="<%= render_page_path('settlement') %>" class="card journey-stage settlement hover-effect shadow-sm h-100 text-center">
        <div class="card-body">
          <h4 class="card-title">Asentamiento</h4>
          <%= image_tag 'journey_stages/settlement.svg', class: 'card-img-top mb-3', alt: 'Imagen de establecerte' %>
          <button class="btn btn-info">Listo para establecerte en NL</button>
        </div>
      </a>
    </div>
