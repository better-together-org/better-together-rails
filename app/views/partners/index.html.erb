<% content_for :page_title do %>
  <%= t('.title') %>
<% end %>

<div class="container my-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= t('.title') %></h1>

    <% if policy(Partner.new).create? %>
      <%= link_to t('.new_btn_text'), new_partner_path, class: 'btn btn-primary' %>
    <% end %>
  </div>

  <% if @partners.any? %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
      <%= render partial: 'partner', collection: @partners %>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-4" role="alert">
      <%= t('.no_partners_message') %>
    </div>
  <% end %>
</div>
